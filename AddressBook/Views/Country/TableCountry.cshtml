@model DataTable
@using System.Data


﻿<main id="main" class="main">
    <div class="container mt-4">
        <!-- Title and Add Button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold text-primary">Country Details</h4>
            <a class="btn btn-primary btn-sm px-4 py-2" asp-area="" asp-controller="Country" asp-action="AddCountry">+ Add Country</a>
        </div>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>CountryID</th>
                        <th>CountryName</th>
                        <th>CountryCode</th>
                        <th>CreationDate</th>
                        <th>UserID</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["CountryID"]</td>
                            <td>@row["CountryName"]</td>
                            <td>@row["CountryCode"]</td>
                            <td>@row["CountryCode"]</td>
                            <td>@row["UserID"]</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>2</td>
                        <td>Canada</td>
                        <td>CA</td>
                        <td>2025-01-15</td>
                        <td>102</td>
                        <td class="text-center">
                            <button class="btn btn-outline-success btn-sm me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-outline-danger btn-sm"><i class="bi bi-x"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>India</td>
                        <td>IN</td>
                        <td>2025-02-01</td>
                        <td>103</td>
                        <td class="text-center">
                            <button class="btn btn-outline-success btn-sm me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-outline-danger btn-sm"><i class="bi bi-x"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</main>