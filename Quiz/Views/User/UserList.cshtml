@model DataTable
@using System.Data


<main id="main" class="main">
    <div class="container-fluid">
        <!-- Search Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Search</h5>
                        <form>
                           <div class="row g-3">
                             <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Enter Username">
                             </div>
                             <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="Enter Email">
                             </div>
                             <div class="col-12">
                                <button type="submit" class="btn btn-success me-2">Search</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                               </div>
                             </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-end align-items-center my-3">
                    <a class="btn btn-primary btn-sm px-4 py-2 mx-3" asp-area="" asp-controller="User" asp-action="AddUser">+ Add User</a>
                    <input class="form-control w-auto me-3" type="search" placeholder="Search..." aria-label="Search">
                </div>
 </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                <tr>
                                    <td>@row["Username"]</td>
                                    <td>@row["Email"]</td>
                                    <td>@row["Password"]</td>
                                    <td>@row["modified"]</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </td>
                                </tr>
                                }
                        </tbody>
                            <tr>
                                <td>janesmith</td>
                                <td>jane@example.com</td>
                                <td>********</td>
                                <td>2024-01-27</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>mikebrown</td>-
                                <td>mike@example.com</td>
                                <td>********</td>
                                <td>2024-01-26</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div>Showing 1 to 3 of 3 entries</div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</main>