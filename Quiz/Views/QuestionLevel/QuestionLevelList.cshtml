@model DataTable
@using System.Data
<main id="main" class="main">

    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <div class="container-fluid">
        <!-- Search Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Search</h5>
                        <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Enter Question Level">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-success me-2">Search</button>
                                <button type="reset"  class="btn btn-secondary">Reset</button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-end align-items-center my-3">
                    <a class="btn btn-primary btn-sm px-4 py-2 mx-3" asp-area="" asp-controller="QuestionLevel" asp-action="AddQuestionLevel">+ Add QuestionLevel</a>
                    <input class="form-control w-auto me-3" type="search" placeholder="Search..." aria-label="Search">
                </div>


                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Level ID</th>
                                <th>Question Level</th>
                                <th>Username</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow row in Model.Rows)
                            {
                                <tr>
                                    <td>@row["QuestionLevelID"]</td>
                                    <td>@row["QuestionLevel"]</td>
                                    <td>@row["UserName"]</td>
                                    <td>@row["Created"]</td>
                                    <td>@row["Modified"]</td>
                                    <td>
                                        <button style="width:100px" class="btn btn-sm btn-outline-primary me-1 mt-1">
                                            <i class="bi bi-pencil">Edit</i>
                                        </button>
                                        <a asp-controller="QuestionLevel" asp-action="QuestionLevelDelete" asp-route-QuestionLevelID="@row["QuestionLevelID"]" class="btn btn-outline-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this country?');">
                                            delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div>Showing 1 to 2 of 2 entries</div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</main>