<main id="main" class="main">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb" class="m-3">
                    <ol class="breadcrumb">
                        <a asp-controller="Quiz" asp-action="QuizList" class="breadcrumb-item">Quiz</a>
                        <li class="breadcrumb-item active">Quiz Add</li>
                    </ol>
                </nav>

                <h5 class="card-title mb-4">Quiz Add/Edit</h5>

                <form>
                    <div class="mb-3">
                        <label for="quizName" class="form-label">Quiz Name</label>
                        <input type="text" class="form-control" id="quizName" required>
                    </div>

                    <div class="mb-3">
                        <label for="totalQuestions" class="form-label">Total Questions</label>
                        <input type="number" class="form-control" id="totalQuestions" required>
                    </div>

                    <div class="mb-3">
                        <label for="quizDate" class="form-label">Quiz Date</label>
                        <input type="date" class="form-control" id="quizDate" required>
                    </div>

                    <div class="mb-3">
                        <label for="userId" class="form-label">User ID</label>
                        <input type="text" class="form-control" id="userId" required>
                    </div>

                    <div class="mb-3">
                        <label for="modified" class="form-label">Modified</label>
                        <input type="date" class="form-control" id="modified" readonly>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="button" class="btn btn-danger">Reset</button>
                        <a class="btn btn-warning ms-1" asp-area="" asp-controller="Quiz" asp-action="QuizList">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>